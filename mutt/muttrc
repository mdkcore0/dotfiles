# TIPS:
# - https://gist.github.com/kaleb/1289741
# - http://stevelosh.com/blog/2012/10/the-homely-mutt/ (see reading email)
# macports: mutt-devel +smtp +sasl +ssl -pop +headercache +idn +sidebar +trash +gpgme
set editor=`echo \$EDITOR`

set imap_delim_chars = '/'
set imap_check_subscribed
set imap_keepalive = 300
unset imap_passive

set mail_check = 120

# sidebar
set sidebar_visible = yes
set sidebar_width = 36
set sidebar_delim = ' │'
set sidebar_delim_chars = '/'

color sidebar_new cyan default

# moving
bind index,pager \cp sidebar-prev
bind index,pager \cn sidebar-next

# scroll mals by line; S-j/k go to next/prev mail
bind pager j next-line
bind pager k previous-line
bind pager gg top
bind pager G bottom

bind index,pager R group-reply

# save to draft
bind compose p postpone-message
# saved drafts
bind index p recall-message

# ESC+o
bind index,pager <ESC>o sidebar-open

# statusbar
set status_chars  = " *%A"
set status_format = "───[ Label: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%?p?( %p postponed )?───%>─"

set include

set sort = threads
set sort_aux = reverse-last-date-received
set sort_browser = date

set date_format = "%b %d %k:%M"
set index_format = "[%Z]  %D  %-20.20F  %s"
set uncollapse_jump
set sort_re
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# pager
set pager_stop
set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"

set smart_wrap

auto_view text/html text/richtext
alternative_order text/plain text/enriched text/html text image/*
set mailcap_path = ~/.mutt/mailcap

set sleep_time = 0
set copy = no

unset mark_old
set wait_key = no
unset move
set beep_new

set tilde
unset markers

# solarized ;)
source ~/downloads/GIT/solarized/mutt-colors-solarized/mutt-colors-solarized-dark-16.muttrc
# st was displaying me some bright colors, differently from xterm,
# so we change some colors and now they are visually the same (but still
# different from just applying raw (mutt-colors-solarized-dark-16 color scheme).
color status     color10 black
color index      color11 default "~R"      # read messages
color index      color10 default "~v"      # messages part of a collapsed thread
color index      color10 default "~P"      # messages from me
color index      color11 default "~R~p!~F" # messages to me
color hdrdefault color12 default
color header     color10 default "^(From)"
color signature  color11 default
color body       color10 default "^gpg: "
color body       color10 red     "^gpg: BAD signature from.*"

# goobook
bind editor <Tab> complete-query
# correct goobook query on each account resource

set ssl_force_tls = yes
unset ssl_starttls

# always show the firsr message when changing 'folders'
folder-hook . exec first-entry

set header_cache = ~/.cache/mutt/
set message_cachedir = $header_cache

source ~/.mutt/accounts/personal
